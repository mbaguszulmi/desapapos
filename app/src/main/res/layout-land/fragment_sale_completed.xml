<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.desapabandara.pos.ui.viewmodel.SaleCompletedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent"
        android:layout_marginTop="48dp"
        android:onClick="@{() -> vm.dismiss()}">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/payment_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".74"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/payment_guide"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:onClick="@{() -> void}"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sale_completed"
            android:textSize="36sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/orange_48"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/payment_guide"
            android:layout_marginTop="48dp"
            android:layout_marginHorizontal="16dp"/>

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{@string/change_required_subtitle(vm.amountTendered)}"
            app:layout_constraintBottom_toTopOf="@id/tv_change_required"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="@id/tv_title"
            android:layout_marginTop="18dp"
            android:textColor="@color/black_1a"/>

        <TextView
            android:id="@+id/tv_change_required"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toTopOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="@id/tv_title"
            tools:text="Rp5.000"
            android:text="@{vm.changeRequired}"
            android:textSize="26sp"
            android:textColor="@color/brown_12"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/payment_guide"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            android:onClick="@{() -> vm.dismiss()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
