<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="numVM"
            type="com.desapabandara.pos.ui.viewmodel.PaymentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_amount_tendered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Rp50.000"
            android:text="@{numVM.numberDisplay}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="26dp"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"/>

        <TextView
            android:id="@+id/tv_payment_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_payment_amount"
            app:layout_constraintTop_toBottomOf="@id/tv_amount_tendered"
            app:layout_constraintStart_toStartOf="@id/tv_amount_tendered"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/num_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_helper"
            app:layout_constraintStart_toStartOf="@id/tv_amount_tendered"
            app:layout_constraintEnd_toStartOf="@id/num_2"
            android:background="@drawable/bg_grey_rounded"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(1)}"/>

        <TextView
            android:id="@+id/num_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_1"
            app:layout_constraintStart_toEndOf="@id/num_1"
            app:layout_constraintEnd_toStartOf="@id/num_3"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bg_grey_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(2)}"/>

        <TextView
            android:id="@+id/num_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_1"
            app:layout_constraintStart_toEndOf="@id/num_2"
            app:layout_constraintEnd_toStartOf="@id/num_del"
            android:background="@drawable/bg_grey_rounded"
            android:layout_marginHorizontal="4dp"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(3)}"/>

        <ImageView
            android:id="@+id/num_del"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_backspace"
            android:scaleType="centerInside"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_1"
            app:layout_constraintStart_toEndOf="@id/num_3"
            app:layout_constraintEnd_toEndOf="@id/tv_amount_tendered"
            android:background="@drawable/bg_red_rounded"
            android:layout_marginStart="4dp"
            android:onClick="@{() -> numVM.del()}"/>

        <TextView
            android:id="@+id/num_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toBottomOf="@id/num_1"
            app:layout_constraintStart_toStartOf="@id/num_1"
            app:layout_constraintEnd_toEndOf="@id/num_1"
            android:background="@drawable/bg_grey_rounded"
            android:layout_marginTop="8dp"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(4)}"/>

        <TextView
            android:id="@+id/num_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_4"
            app:layout_constraintStart_toStartOf="@id/num_2"
            app:layout_constraintEnd_toEndOf="@id/num_2"
            android:background="@drawable/bg_grey_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(5)}"/>

        <TextView
            android:id="@+id/num_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_4"
            app:layout_constraintStart_toStartOf="@id/num_3"
            app:layout_constraintEnd_toEndOf="@id/num_3"
            android:background="@drawable/bg_grey_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(6)}"/>

        <TextView
            android:id="@+id/num_10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="10"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_4"
            app:layout_constraintStart_toStartOf="@id/num_del"
            app:layout_constraintEnd_toEndOf="@id/num_del"
            android:background="@drawable/bg_orange_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(10)}"/>

        <TextView
            android:id="@+id/num_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toBottomOf="@id/num_4"
            app:layout_constraintStart_toStartOf="@id/num_1"
            app:layout_constraintEnd_toEndOf="@id/num_1"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_grey_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(7)}"/>

        <TextView
            android:id="@+id/num_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_7"
            app:layout_constraintStart_toStartOf="@id/num_2"
            app:layout_constraintEnd_toEndOf="@id/num_2"
            android:background="@drawable/bg_grey_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(8)}"/>

        <TextView
            android:id="@+id/num_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_7"
            app:layout_constraintStart_toStartOf="@id/num_3"
            app:layout_constraintEnd_toEndOf="@id/num_3"
            android:background="@drawable/bg_grey_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(9)}"/>

        <TextView
            android:id="@+id/num_20"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="20"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_7"
            app:layout_constraintStart_toStartOf="@id/num_del"
            app:layout_constraintEnd_toEndOf="@id/num_del"
            android:background="@drawable/bg_orange_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(20)}"/>

        <TextView
            android:id="@+id/num_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toBottomOf="@id/num_7"
            app:layout_constraintStart_toStartOf="@id/num_1"
            app:layout_constraintEnd_toEndOf="@id/num_1"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_grey_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapInt(0)}"/>

        <TextView
            android:id="@+id/num_00"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="00"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_0"
            app:layout_constraintStart_toStartOf="@id/num_2"
            app:layout_constraintEnd_toEndOf="@id/num_2"
            android:background="@drawable/bg_grey_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapStrToInt(`00`)}"/>

        <TextView
            android:id="@+id/num_000"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="000"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_0"
            app:layout_constraintStart_toStartOf="@id/num_3"
            app:layout_constraintEnd_toEndOf="@id/num_3"
            android:background="@drawable/bg_grey_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapStrToInt(`000`)}"/>

        <TextView
            android:id="@+id/num_50"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="50"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@id/num_0"
            app:layout_constraintStart_toStartOf="@id/num_del"
            app:layout_constraintEnd_toEndOf="@id/num_del"
            android:background="@drawable/bg_orange_rounded"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:onClick="@{() -> numVM.tapStrToInt(`50`)}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_payment_methods"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/num_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_amount_tendered"
            app:layout_constraintEnd_toEndOf="@id/tv_amount_tendered"
            android:paddingVertical="16dp"
            android:clipToPadding="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>