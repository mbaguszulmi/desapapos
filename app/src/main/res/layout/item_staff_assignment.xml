<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="staffAssignment"
            type="com.desapabandara.pos.model.ui.StaffAssignmentDisplay" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Staff Name"
            android:text="@{staffAssignment.staffName}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black_1a"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tv_position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Admin"
            android:text="@{staffAssignment.positionName}"
            app:layout_constraintTop_toBottomOf="@id/tv_staff_name"
            app:layout_constraintStart_toStartOf="@id/tv_staff_name"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tv_original_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Original: Kitchen"
            android:text="@{@string/staff_original_location(staffAssignment.originalLocationName)}"
            app:layout_constraintTop_toBottomOf="@id/tv_position_name"
            app:layout_constraintStart_toStartOf="@id/tv_position_name"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tv_assign"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:drawableEndCompat="@drawable/ic_chevron_right"
            android:gravity="center_vertical"
            tools:text="Assign"
            android:text="@{staffAssignment.assignedLocationName.isEmpty() ? @string/assign : staffAssignment.assignedLocationName}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="italic"
            android:textColor="@{staffAssignment.assignedLocationName.isEmpty() ? @color/grey_83 : @color/black_1a}"/>1

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/tv_original_location"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>