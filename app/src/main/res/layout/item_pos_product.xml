<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.desapabandara.pos.model.ui.PosProductDisplay" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/product_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"
            android:background="@drawable/bg_pos_product"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/product_bg"
            app:layout_constraintBottom_toBottomOf="@id/product_bg"
            android:paddingHorizontal="8dp"
            tools:text="Sate Presiden"
            android:text="@{product.name}"
            android:textColor="@color/mainFont"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/product_bg"
            app:layout_constraintStart_toStartOf="@id/product_bg"
            app:layout_constraintEnd_toEndOf="@id/product_bg"
            android:layout_marginBottom="8dp"
            tools:text="Rp50.000"
            android:text="@{product.price}"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>