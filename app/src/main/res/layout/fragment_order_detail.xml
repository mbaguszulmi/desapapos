<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.desapabandara.pos.ui.viewmodel.OrderDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/top_bar"
            layout="@layout/layout_top_bar_back"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/label_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invoice"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintStart_toStartOf="@id/label_total"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/label_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_number_label"
            app:layout_constraintTop_toBottomOf="@id/label_invoice"
            app:layout_constraintStart_toStartOf="@id/label_total"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            orderTypeText="@{vm.orderType}"
            tools:text="Eat In"
            app:layout_constraintTop_toBottomOf="@id/label_order_number"
            app:layout_constraintStart_toStartOf="@id/label_total"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/label_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/staff"
            app:layout_constraintTop_toBottomOf="@id/tv_order_type"
            app:layout_constraintStart_toStartOf="@id/label_total"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/label_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer"
            app:layout_constraintTop_toBottomOf="@id/label_staff"
            app:layout_constraintStart_toStartOf="@id/label_total"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/label_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timestamp"
            app:layout_constraintTop_toBottomOf="@id/label_customer"
            app:layout_constraintStart_toStartOf="@id/label_total"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginTop="8dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/order_data_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".3"/>

        <TextView
            android:id="@+id/tv_invoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{vm.invoiceNumber}"
            tools:text="Testing"
            app:layout_constraintTop_toTopOf="@id/label_invoice"
            app:layout_constraintStart_toEndOf="@id/order_data_guide"
            app:layout_constraintEnd_toStartOf="@id/btn_print"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:layout_marginHorizontal="8dp"/>

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.orderNumber}"
            tools:text="Testing"
            app:layout_constraintTop_toTopOf="@id/label_order_number"
            app:layout_constraintStart_toStartOf="@id/tv_invoice"/>

        <TextView
            android:id="@+id/tv_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.tableNumber}"
            tools:text="Testing"
            app:layout_constraintTop_toTopOf="@id/tv_order_type"
            app:layout_constraintStart_toStartOf="@id/tv_invoice"/>

        <TextView
            android:id="@+id/tv_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.staffName}"
            tools:text="Testing"
            app:layout_constraintTop_toTopOf="@id/label_staff"
            app:layout_constraintStart_toStartOf="@id/tv_invoice"/>

        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.customerName}"
            tools:text="Testing"
            app:layout_constraintTop_toTopOf="@id/label_customer"
            app:layout_constraintStart_toStartOf="@id/tv_invoice"/>

        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.orderTimestamp}"
            tools:text="Testing"
            app:layout_constraintTop_toTopOf="@id/label_timestamp"
            app:layout_constraintStart_toStartOf="@id/tv_invoice"/>

        <ImageView
            android:id="@+id/btn_print"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_print_white"
            android:background="@drawable/bg_primary_rounded"
            app:layout_constraintTop_toTopOf="@id/label_invoice"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"
            android:onClick="@{() -> vm.reprintOrder()}"/>

        <View
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/tv_timestamp"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_divider"
            app:layout_constraintBottom_toTopOf="@id/bottom_divider"/>

        <View
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintBottom_toTopOf="@id/label_subtotal"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/label_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtotal"
            app:layout_constraintBottom_toTopOf="@id/label_tax"
            app:layout_constraintStart_toStartOf="@id/label_tax"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp10.000"
            android:text="@{vm.orderSubtotal}"
            app:layout_constraintTop_toTopOf="@id/label_subtotal"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/label_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tax"
            app:layout_constraintBottom_toTopOf="@id/label_total"
            app:layout_constraintStart_toStartOf="@id/label_total"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp100"
            android:text="@{vm.orderTax}"
            app:layout_constraintTop_toTopOf="@id/label_tax"
            app:layout_constraintEnd_toEndOf="@id/tv_subtotal"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"/>

        <TextView
            android:id="@+id/label_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="@color/black_1a"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp10.000"
            android:text="@{vm.orderTotal}"
            app:layout_constraintTop_toTopOf="@id/label_total"
            app:layout_constraintEnd_toEndOf="@id/tv_subtotal"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="@color/black_1a"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
