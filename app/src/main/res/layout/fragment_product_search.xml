<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.desapabandara.pos.ui.viewmodel.ProductSearchViewModel" />

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{() -> vm.dismiss()}">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".33"/>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="@id/left_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="48dp"
            android:hint="@string/search_product"
            android:imeOptions="actionDone"
            android:background="@color/white"
            android:paddingHorizontal="8dp"
            android:maxLines="1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/bg_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/et_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            android:elevation="6dp"
            android:onClick="@{() -> void}"
            android:visibility="@{vm.products.isEmpty() ? View.GONE : View.VISIBLE}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_products"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/bg_rv"
            app:layout_constraintBottom_toBottomOf="@id/bg_rv"
            app:layout_constraintStart_toStartOf="@id/bg_rv"
            app:layout_constraintEnd_toEndOf="@id/bg_rv"
            android:paddingVertical="16dp"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:visibility="@{vm.products.isEmpty() ? View.GONE : View.VISIBLE}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>