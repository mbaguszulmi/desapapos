<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.desapabandara.pos.ui.viewmodel.CartViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:onClick="@{() -> void}">

        <include
            android:id="@+id/top_bar"
            layout="@layout/layout_top_bar_back"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/order_item_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintBottom_toTopOf="@id/label_subtotal"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintBottom_toTopOf="@id/label_subtotal"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/label_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtotal"
            app:layout_constraintBottom_toTopOf="@id/label_tax"
            app:layout_constraintStart_toStartOf="@id/label_tax"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp10.000"
            android:text="@{vm.orderSubtotal}"
            app:layout_constraintTop_toTopOf="@id/label_subtotal"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/label_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tax"
            app:layout_constraintBottom_toTopOf="@id/label_total"
            app:layout_constraintStart_toStartOf="@id/label_total"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp100"
            android:text="@{vm.orderTax}"
            app:layout_constraintTop_toTopOf="@id/label_tax"
            app:layout_constraintEnd_toEndOf="@id/tv_subtotal"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_1a"/>

        <TextView
            android:id="@+id/label_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            app:layout_constraintBottom_toTopOf="@id/btn_clear_order"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="@color/black_1a"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp10.000"
            android:text="@{vm.orderTotal}"
            app:layout_constraintTop_toTopOf="@id/label_total"
            app:layout_constraintEnd_toEndOf="@id/tv_subtotal"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="@color/black_1a"/>

        <View
            android:id="@+id/btn_clear_order"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/red_36"
            app:layout_constraintBottom_toTopOf="@id/btn_payment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_send"
            android:onClick="@{() -> vm.clearOrder()}"/>

        <View
            android:id="@+id/clear_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/btn_clear_order"
            app:layout_constraintEnd_toEndOf="@id/btn_clear_order"
            app:layout_constraintTop_toTopOf="@id/btn_clear_order"/>

        <View
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/green_50"
            app:layout_constraintBottom_toTopOf="@id/btn_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_clear_order"
            android:onClick="@{() -> vm.sendOrder()}"/>

        <View
            android:id="@+id/send_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/btn_send"
            app:layout_constraintEnd_toEndOf="@id/btn_send"
            app:layout_constraintTop_toTopOf="@id/btn_send"/>

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="false"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="@id/btn_clear_order"
            app:layout_constraintEnd_toStartOf="@id/clear_center"
            app:layout_constraintTop_toTopOf="@id/btn_clear_order"/>

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/iv_clear"
            app:layout_constraintBottom_toBottomOf="@id/iv_clear"
            app:layout_constraintStart_toEndOf="@id/clear_center"/>

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="false"
            android:src="@drawable/ic_send"
            app:layout_constraintBottom_toBottomOf="@id/btn_send"
            app:layout_constraintEnd_toStartOf="@id/send_center"
            app:layout_constraintTop_toTopOf="@id/btn_send"/>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/iv_send"
            app:layout_constraintBottom_toBottomOf="@id/iv_send"
            app:layout_constraintStart_toEndOf="@id/send_center"/>

        <View
            android:id="@+id/btn_payment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?attr/colorPrimary"
            android:onClick="@{() -> vm.payOrder()}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="@id/btn_payment"
            app:layout_constraintStart_toStartOf="@id/btn_payment"
            app:layout_constraintEnd_toEndOf="@id/btn_payment"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_payments"
            app:layout_constraintTop_toTopOf="@id/btn_payment"
            app:layout_constraintStart_toStartOf="@id/btn_payment"
            app:layout_constraintEnd_toEndOf="@id/btn_payment"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
