<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="printer"
            type="com.desapabandara.pos.model.ui.PrinterDisplay" />

        <import type="android.view.View"/>
    </data>

    <co.mbznetwork.android.base.view.SwipeRevealLayout
        android:id="@+id/swipe_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragFromEdge="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_connect"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@color/green_50"
                android:scaleType="centerInside"
                android:src="@drawable/ic_connect" />

            <ImageButton
                android:id="@+id/btn_test_print"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/colorSecondary"
                android:scaleType="centerInside"
                android:src="@drawable/ic_print_white" />

            <ImageButton
                android:id="@+id/btn_remove_item"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@color/red_36"
                android:scaleType="centerInside"
                android:src="@drawable/ic_delete" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/bg_circle_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_name"
                android:visibility="@{printer.isConnected ? View.VISIBLE : View.GONE}"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/bg_circle_red"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_name"
                android:visibility="@{printer.isConnected ? View.GONE : View.VISIBLE}"/>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{printer.name}"
                tools:text="Name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:textSize="16sp"
                android:textColor="@color/black_1a"/>

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{printer.address}"
                tools:text="Address"
                app:layout_constraintTop_toBottomOf="@id/text_name"
                app:layout_constraintStart_toStartOf="@id/text_name"
                android:layout_marginTop="4dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                app:layout_constraintTop_toBottomOf="@id/text_address"
                android:layout_marginTop="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </co.mbznetwork.android.base.view.SwipeRevealLayout>
</layout>