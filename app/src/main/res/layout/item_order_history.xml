<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="order"
            type="com.desapabandara.pos.model.ui.HeldOrderDisplay" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/col_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".35"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/col_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".55"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/col_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".83"/>

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/col_1"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            tools:text="No 5"
            android:text="@{@string/order_number_display(order.orderNumber)}"
            android:textColor="@color/black_1a"/>

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_order_number"
            app:layout_constraintStart_toStartOf="@id/tv_order_number"
            app:layout_constraintEnd_toEndOf="@id/tv_order_number"
            android:layout_marginTop="8dp"
            tools:text="10/11/2025 10:00PM"
            android:text="@{order.orderDate}"
            android:textColor="@color/black_1a"/>

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_order_number"
            app:layout_constraintStart_toStartOf="@id/col_1"
            app:layout_constraintEnd_toStartOf="@id/col_2"
            android:gravity="center_horizontal"
            tools:text="Eat In"
            orderTypeText="@{order.orderType}"
            android:textColor="@color/black_1a"/>

        <TextView
            android:id="@+id/tv_table"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_order_type"
            app:layout_constraintStart_toStartOf="@id/tv_order_type"
            app:layout_constraintEnd_toEndOf="@id/tv_order_type"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            tools:text="1"
            android:text="@{order.orderTable}"
            android:textColor="@color/black_1a"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_order_number"
            app:layout_constraintStart_toStartOf="@id/col_2"
            app:layout_constraintEnd_toStartOf="@id/col_3"
            android:gravity="end"
            tools:text="Rp10.000"
            android:text="@{order.total}"
            android:textColor="@color/black_1a"/>

<!--        <View-->
<!--            android:id="@+id/btn_load_order"-->
<!--            android:layout_width="48dp"-->
<!--            android:layout_height="48dp"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="@id/col_3"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            android:background="@drawable/bg_primary_rounded"/>-->

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_load"-->
<!--            app:layout_constraintTop_toTopOf="@id/btn_load_order"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/btn_load_order"-->
<!--            app:layout_constraintStart_toStartOf="@id/btn_load_order"-->
<!--            app:layout_constraintEnd_toEndOf="@id/btn_load_order"/>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_order_date"
            android:layout_marginTop="8dp"
            android:background="@color/divider"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
